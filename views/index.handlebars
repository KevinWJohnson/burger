<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>


<div id="uneaten-burgers">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devore=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<h2>Cats that are sleepy!</h2>
<div id="devoured-burgers"></div>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devore=false}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <!--<label for="bu">Burger Name:</label>-->
    <input type="text" id="bu" name="name">
  </div>

