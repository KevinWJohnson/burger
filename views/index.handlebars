<h1>Eat-Da-Burger!</h1>


<div class="row">
  <div class="col-md-6" id="uneaten-burgers">

    <h2>Burger Choices:</h2>
      
        {{#each burgers}} 
        {{#unless this.devoured}} 
        {{id}}. {{burger_name}}
	      <button class="devour-it" data-id="{{id}}" data-devoured="{{devoured}}">Devour It!
        </button>
         {{/unless}} 
         {{/each}}
      
  </div>

  <div class="col-md-6" id="devoured-burgers">
  
    <h2>Burgers that are eaten!</h2>
    
      <!--{{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoure=true}} {{/if}} {{/each}}-->
      {{#each burgers}} 
      {{#if this.devoured}} 
      {{id}}. {{burger_name}}
      {{/if}} 
      {{/each}}
    
  </div>

</div>

<h2>Enter a Burger you want to eat and Click the "Submit" button</h2>

<form class="create-form">

  <div class="form-group">
    <!--<label for="bu">Burger Name:</label>-->
    <input type="text" id="bu" name="name">
  </div>

